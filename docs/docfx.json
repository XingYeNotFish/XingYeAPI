{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "**/*.csproj"
          ],
          "exclude": [
            "**/bin/**",
            "**/obj/**"
          ],
          "src": "../"
        }
      ],
      "dest": "api",
      "namespaceLayout": "nested",
      "enumSortOrder": "declaringOrder"
    }
  ],
  "build": {
    "globalMetadata": {
      "_appTitle": "XingYeAPI",
      "_enableSearch": true,
      "_lang": "zh-CN",
      "_gitContribute": {
        "repo": "https://github.com/XingYeNotFish/XingYeAPI",
        "branch": "dev"
      }
    },
    "template": [ "default", "modern" ],
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md",
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "dest": "_site"
  }
}